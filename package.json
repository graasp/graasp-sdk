{
  "name": "@graasp/sdk",
  "version": "5.15.1",
  "description": "Development kit including type definitions and util functions for the Graasp ecosystem.",
  "license": "AGPL-3.0-only",
  "repository": "git@github.com:graasp/graasp-sdk.git",
  "author": "Graasp Association",
  "contributors": [
    "Kim Lan Phan Hoang",
    "Basile Spaenlehauer",
    "Thibault Reidy",
    "Jeremy Defferrard"
  ],
  "type": "module",
  "sideEffects": false,
  "files": [
    "CHANGELOG.md",
    "esm",
    "cjs"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./esm/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./cjs/index.d.ts",
        "default": "./cjs/index.js"
      }
    }
  },
  "scripts": {
    "build": "pnpm run \"/^build:.*/\"",
    "build:cjs": "unbuild && tsc-alias -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > cjs/package.json",
    "build:esm": "tsc -p tsconfig.esm.json && tsc-alias -p tsconfig.esm.json && echo '{\"type\": \"module\"}' > esm/package.json",
    "test": "vitest",
    "check": "pnpm run \"/^check:.*/\"",
    "check:type": "tsc --noEmit",
    "check:lint": "eslint ./src",
    "check:prettier": "prettier --check src/**/*.ts",
    "prettier:write": "prettier --write src/**/*.ts",
    "pre-commit": "pnpm check",
    "preinstall": "npx only-allow pnpm",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@faker-js/faker": "9.7.0",
    "filesize": "10.1.6",
    "js-cookie": "3.0.5"
  },
  "peerDependencies": {
    "date-fns": "^3 || ^4.0.0",
    "uuid": "^9 || ^10 || ^11.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.36.0",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/eslint": "^9.6.1",
    "@types/js-cookie": "3.0.6",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "date-fns": "4.1.0",
    "eslint": "9.36.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "prettier": "3.6.2",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.3",
    "unbuild": "3.6.1",
    "uuid": "11.1.0",
    "vite": "^7.1.7",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "volta": {
    "node": "22.15.1"
  }
}
